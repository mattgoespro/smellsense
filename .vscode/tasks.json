{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build_runner: build",
      "detail": "Run build using build_runner.",
      "command": "dart run build_runner build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "isBackground": true,
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "adb: connect to wifi device",
      "detail": "Connect to a device over Wi-Fi.",
      "command": "scripts/connect_device.sh -d wifi",
      "isBackground": true,
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        {
          "pattern": {
            "regexp": "^Successfully connected on",
            "file": 1,
            "location": 2,
            "message": 3
          },
          "background": {
            "activeOnStart": true,
            "beginsPattern": "^Successfully connected on",
            "endsPattern": "^$"
          }
        }
      ]
    },
    {
      "label": "adb: launch virtual device",
      "detail": "Launch a virtual device.",
      "command": "emulator -avd Pixel_6_API_34 -gpu host  -grpc-use-jwt",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        {
          "pattern": {
            "regexp": "^emulator: INFO: boot completed",
            "file": 1,
            "location": 2,
            "message": 3
          },
          "background": {
            "activeOnStart": true,
            "beginsPattern": "^emulator: INFO: boot completed",
            "endsPattern": "^$"
          }
        }
      ]
    },
    {
      "label": "dart: fix",
      "detail": "Run dart fix.",
      "command": "scripts/fix.sh",
      "isBackground": true,
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        {
          "pattern": {
            "regexp": "^(.*):(\\d+):(\\d+): (.*): (.*)$",
            "file": 1,
            "location": 2,
            "severity": 4,
            "message": 5
          },
          "background": {
            "activeOnStart": true,
            "beginsPattern": "^(.*):(\\d+):(\\d+): (.*): (.*)$",
            "endsPattern": "^$"
          }
        }
      ]
    }
  ],
  "inputs": [
    {
      "type": "pickString",
      "id": "device",
      "description": "Select the type of device to connect to...",
      "options": [
        {
          "label": "Wi-Fi",
          "value": "wifi"
        },
        {
          "label": "VM",
          "value": "vm"
        }
      ]
    }
  ]
}
